#!/usr/bin/env groovy

// Load utils.
@UTILS_CONTENT@

node(getNodeLabel()) {
  stage('test') {
    timeout(600) {
      ansiColor('xterm') {
        timestamps {
          try {
            cleanWorkspace()
            dir(env.WORKSPACE) {
              // Always use drake-ci/main and drake/master for production builds.
              def scmVars = checkout('main', 'master')
              doMainBuild(scmVars)
            }
          } finally {
            try {
              checkBuildResult()
              emailFailureResults()
              addCDashBadge()
            } finally {
              cleanWorkspace()
            }
          }
        }
      }
    }
  }
}
