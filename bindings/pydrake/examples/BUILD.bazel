# -*- python -*-

load("@drake//tools/install:install.bzl", "install")
load("//tools/lint:lint.bzl", "add_lint_tests")
load(
    "@drake//tools/skylark:pybind.bzl",
    "drake_pybind_library",
    "get_drake_py_installs",
    "get_pybind_package_info",
)
load(
    "@drake//tools/skylark:drake_py.bzl",
    "drake_py_library",
    "drake_py_unittest",
)

package(default_visibility = [
    "//bindings/pydrake:__subpackages__",
])

# This determines how `PYTHONPATH` is configured, and how to install the
# bindings.
PACKAGE_INFO = get_pybind_package_info("//bindings")

drake_py_library(
    name = "module_py",
    srcs = ["__init__.py"],
    imports = PACKAGE_INFO.py_imports,
    deps = [
        "//bindings/pydrake:module_py",
    ],
)

drake_pybind_library(
    name = "acrobot_py",
    cc_deps = [
        "//bindings/pydrake:documentation_pybind",
    ],
    cc_srcs = ["acrobot_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        "//bindings/pydrake/systems",
    ],
)

drake_pybind_library(
    name = "compass_gait_py",
    cc_deps = [
        "//bindings/pydrake:documentation_pybind",
    ],
    cc_srcs = ["compass_gait_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        "//bindings/pydrake/systems",
    ],
)

drake_pybind_library(
    name = "manipulation_station_py",
    cc_deps = [
        "//bindings/pydrake:documentation_pybind",
    ],
    cc_srcs = ["manipulation_station_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        "//bindings/pydrake/systems",
    ],
    visibility = ["//visibility:public"],
)

drake_pybind_library(
    name = "pendulum_py",
    cc_deps = [
        "//bindings/pydrake:documentation_pybind",
    ],
    cc_srcs = ["pendulum_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        "//bindings/pydrake/systems",
    ],
)

drake_pybind_library(
    name = "rimless_wheel_py",
    cc_deps = [
        "//bindings/pydrake:documentation_pybind",
    ],
    cc_srcs = ["rimless_wheel_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        "//bindings/pydrake/systems",
    ],
)

drake_pybind_library(
    name = "van_der_pol_py",
    cc_deps = [
        "//bindings/pydrake:documentation_pybind",
    ],
    cc_srcs = ["van_der_pol_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        "//bindings/pydrake/systems",
    ],
)

PY_LIBRARIES_WITH_INSTALL = [
    ":acrobot_py",
    ":compass_gait_py",
    ":manipulation_station_py",
    ":pendulum_py",
    ":rimless_wheel_py",
    ":van_der_pol_py",
    "//bindings/pydrake/examples/multibody",
]

PY_LIBRARIES = [
    ":module_py",
]

# Package roll-up (for Bazel dependencies).
# N.B. `examples` packages do not have `all` modules.
drake_py_library(
    name = "examples",
    imports = PACKAGE_INFO.py_imports,
    deps = PY_LIBRARIES_WITH_INSTALL + PY_LIBRARIES,
)

install(
    name = "install",
    targets = PY_LIBRARIES,
    py_dest = PACKAGE_INFO.py_dest,
    deps = get_drake_py_installs(PY_LIBRARIES_WITH_INSTALL),
)

drake_py_unittest(
    name = "acrobot_test",
    deps = [
        ":acrobot_py",
    ],
)

drake_py_unittest(
    name = "compass_gait_test",
    size = "small",
    deps = [
        ":compass_gait_py",
    ],
)

drake_py_unittest(
    name = "manipulation_station_test",
    deps = [
        ":manipulation_station_py",
        "//bindings/pydrake/multibody:multibody_tree_py",
    ],
)

drake_py_unittest(
    name = "pendulum_test",
    deps = [
        ":pendulum_py",
    ],
)

drake_py_unittest(
    name = "rimless_wheel_test",
    deps = [
        ":rimless_wheel_py",
    ],
)

drake_py_unittest(
    name = "van_der_pol_test",
    deps = [
        ":van_der_pol_py",
    ],
)

add_lint_tests(
    enable_clang_format_lint = True,
)
