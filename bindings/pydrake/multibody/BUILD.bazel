# -*- python -*-

load("@drake//tools/install:install.bzl", "install")
load("//tools/lint:lint.bzl", "add_lint_tests")
load(
    "//tools/skylark:pybind.bzl",
    "drake_pybind_library",
    "get_drake_py_installs",
    "get_pybind_package_info",
)
load(
    "//tools/skylark:drake_py.bzl",
    "drake_py_library",
    "drake_py_unittest",
)

package(default_visibility = [
    "//bindings/pydrake:__subpackages__",
])

# This determines how `PYTHONPATH` is configured, and how to install the
# bindings.
PACKAGE_INFO = get_pybind_package_info("//bindings")

drake_py_library(
    name = "module_py",
    srcs = ["__init__.py"],
    imports = PACKAGE_INFO.py_imports,
    deps = [
        "//bindings/pydrake:common_py",
    ],
)

drake_pybind_library(
    name = "parsers_py",
    cc_so_name = "parsers",
    cc_srcs = ["parsers_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
    ],
)

drake_pybind_library(
    name = "rigid_body_plant_py",
    cc_so_name = "rigid_body_plant",
    cc_srcs = ["rigid_body_plant_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        ":rigid_body_tree_py",
        "//bindings/pydrake/systems:framework_py",
    ],
)

drake_pybind_library(
    name = "rigid_body_tree_py",
    cc_deps = [
        "//bindings/pydrake:autodiff_types_pybind",
    ],
    cc_so_name = "rigid_body_tree",
    cc_srcs = ["rigid_body_tree_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
        ":parsers_py",
        ":shapes_py",
        "//bindings/pydrake:autodiffutils_py",
    ],
)

drake_pybind_library(
    name = "shapes_py",
    cc_so_name = "shapes",
    cc_srcs = ["shapes_py.cc"],
    package_info = PACKAGE_INFO,
    py_deps = [
        ":module_py",
    ],
)

PY_LIBRARIES_WITH_INSTALL = [
    ":parsers_py",
    ":rigid_body_plant_py",
    ":rigid_body_tree_py",
    ":shapes_py",
]

PY_LIBRARIES = [
    ":module_py",
]

# Symbol roll-up (for user ease).
drake_py_library(
    name = "all_py",
    srcs = ["all.py"],
    deps = PY_LIBRARIES_WITH_INSTALL + PY_LIBRARIES,
)

# Package roll-up (for Bazel dependencies).
drake_py_library(
    name = "multibody",
    deps = [":all_py"],
)

install(
    name = "install",
    targets = PY_LIBRARIES + [":all_py"],
    py_dest = PACKAGE_INFO.py_dest,
    deps = get_drake_py_installs(PY_LIBRARIES_WITH_INSTALL),
)

drake_py_unittest(
    name = "rigid_body_plant_test",
    size = "small",
    data = ["//examples/pendulum:models"],
    deps = [
        ":rigid_body_plant_py",
    ],
)

drake_py_unittest(
    name = "shapes_test",
    size = "small",
    data = ["//examples/quadrotor:models"],
    deps = [
        ":shapes_py",
    ],
)

drake_py_unittest(
    name = "rigid_body_tree_test",
    size = "small",
    data = [
        "//examples/atlas:models",
        "//examples/pendulum:models",
    ],
    deps = [":rigid_body_tree_py"],
)

drake_py_unittest(
    name = "parsers_test",
    size = "small",
    data = [
        "//examples/acrobot:models",
        "//examples/atlas:models",
        "//examples/pr2:models",
    ],
    deps = [
        ":parsers_py",
        ":rigid_body_tree_py",
    ],
)

add_lint_tests()
