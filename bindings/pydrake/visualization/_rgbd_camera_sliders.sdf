<?xml version="1.0"?>
<!--
 Provides a useful 6dof joint sequence to posture a preview camera:
 * The target is postured using x,y,z primsatic vs the world origin.
 * The sensor is postured using azimuth, elevation, range vs the target.
-->
<sdf xmlns:drake="http://drake.mit.edu" version="1.9">
  <model name="_rgbd_camera_sliders">
    <link name="base"/>
    <link name="link_x"/>
    <link name="link_y"/>
    <link name="link_z">
      <visual name="target">
        <geometry><sphere><radius>0.02</radius></sphere></geometry>
        <material><diffuse>1.0 0.33 0 0.9</diffuse></material>
      </visual>
    </link>
    <link name="link_azimuth"/>
    <link name="link_zenith"/>
    <link name="link_range"/>
    <link name="pinhole">
      <!-- The RgbdSensor looks along +z with +y pointing to the bottom of the
      image. With respect to our parent frame "link_range", we want to look
      along its -x with -z pointing down, so the transform between link_range
      and pinhole is +90 yaw then -90 roll. -->
      <pose degrees="true">0 0 0 -90 0 90</pose>
      <visual name="ball">
        <geometry><sphere><radius>1e-9</radius></sphere></geometry>
        <material><diffuse>0 0 0 0</diffuse></material>
      </visual>
    </link>
    <joint name="weld_world" type="fixed">
      <parent>world</parent>
      <child>base</child>
    </joint>
    <joint name="$rgbd_target_x" type="prismatic">
      <parent>base</parent>
      <child>link_x</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-10</lower>
          <upper>+10</upper>
        </limit>
      </axis>
    </joint>
    <joint name="$rgbd_target_y" type="prismatic">
      <parent>link_x</parent>
      <child>link_y</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-10</lower>
          <upper>+10</upper>
        </limit>
      </axis>
    </joint>
    <joint name="$rgbd_target_z" type="prismatic">
      <parent>link_y</parent>
      <child>link_z</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-10</lower>
          <upper>+10</upper>
        </limit>
      </axis>
    </joint>
    <joint name="$rgbd_azimuth" type="revolute">
      <parent>link_z</parent>
      <child>link_azimuth</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.15</lower>
          <upper>+3.15</upper>
        </limit>
      </axis>
    </joint>
    <joint name="$rgbd_zenith" type="revolute">
      <parent>link_azimuth</parent>
      <child>link_zenith</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.58</lower>
          <upper>+1.58</upper>
        </limit>
      </axis>
    </joint>
    <joint name="$rgbd_range" type="prismatic">
      <parent>link_zenith</parent>
      <child>link_range</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>0.1</lower>
          <upper>10.0</upper>
        </limit>
      </axis>
    </joint>
    <joint name="weld_pinhole" type="fixed">
      <parent>link_range</parent>
      <child>pinhole</child>
    </joint>
  </model>
</sdf>
