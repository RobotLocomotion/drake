<?xml version="1.0"?>
<sdf xmlns:drake="http://drake.mit.edu" version="1.8">
  <!-- Test for all kinds of supported glTF textures. -->
  <model name="fully_textured_pyramid">
    <link name="pyramid">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>package://drake/geometry/render/test/meshes/mirror_ball.gltf</uri>
            <scale>0.5 0.5 0.5</scale>
          </mesh>
        </geometry>
      </visual>
      <visual name="sphere">
        <pose>0 0 0.75 0 0 0</pose>
        <geometry>
          <sphere><radius>0.25</radius></sphere>
        </geometry>
        <material><diffuse>1 1 1 1</diffuse></material>
      </visual>
    </link>
  </model>
</sdf>
