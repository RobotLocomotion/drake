    name = "dev",
    deps = [
        ":rgbd_camera",
    ],
)

drake_cc_library(
    name = "rgbd_camera",
    srcs = ["rgbd_camera.cc"],
    hdrs = ["rgbd_camera.h"],
    deps = [
        "//geometry/dev",
        "//systems/framework",
        "//systems/primitives",
        "//systems/rendering:pose_vector",
        "//systems/sensors:camera_info",
        "//systems/sensors:image",
        "@eigen",
    ],
