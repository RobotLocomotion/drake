<?xml version="1.0" ?>
<!--
Loads five Prius models and one world model onto the ROS parameter server.
-->
<launch>
  <param name="car_count" type="int" value="5" />

  <param name="car_description_1_rviz"
         command="$(find xacro)/xacro.py '$(find drake_cars_examples)/models/drake_prius/xacro/drake_prius_free_in_world_1.xacro'" />

  <param name="car_description_2_rviz"
         command="$(find xacro)/xacro.py '$(find drake_cars_examples)/models/drake_prius/xacro/drake_prius_free_in_world_2.xacro'" />

  <param name="car_description_3_rviz"
         command="$(find xacro)/xacro.py '$(find drake_cars_examples)/models/drake_prius/xacro/drake_prius_free_in_world_3.xacro'" />

  <param name="car_description_4_rviz"
         command="$(find xacro)/xacro.py '$(find drake_cars_examples)/models/drake_prius/xacro/drake_prius_free_in_world_4.xacro'" />

  <param name="car_description_5_rviz"
         command="$(find xacro)/xacro.py '$(find drake_cars_examples)/models/drake_prius/xacro/drake_prius_free_in_world_5.xacro'" />

  <param name="car_description_1_drake" textfile="$(find drake)/drake/examples/Cars/models/prius/prius_with_lidar.sdf"/>
  <param name="car_description_1_drake_x"     type="double" value="0.0" />
  <param name="car_description_1_drake_y"     type="double" value="0.0" />
  <param name="car_description_1_drake_z"     type="double" value="0.2" />
  <param name="car_description_1_drake_roll"  type="double" value="0.0" />
  <param name="car_description_1_drake_pitch" type="double" value="0.0" />
  <param name="car_description_1_drake_yaw"   type="double" value="0.0" />

  <param name="car_description_2_drake" textfile="$(find drake)/drake/examples/Cars/models/prius/prius_with_lidar.sdf"/>
  <param name="car_description_2_drake_x"     type="double" value="5.0" />
  <param name="car_description_2_drake_y"     type="double" value="5.0" />
  <param name="car_description_2_drake_z"     type="double" value="0.2" />
  <param name="car_description_2_drake_roll"  type="double" value="0.0" />
  <param name="car_description_2_drake_pitch" type="double" value="0.0" />
  <param name="car_description_2_drake_yaw"   type="double" value="0.0" />

  <param name="car_description_3_drake" textfile="$(find drake)/drake/examples/Cars/models/prius/prius_with_lidar.sdf"/>
  <param name="car_description_3_drake_x"     type="double" value="-5.0" />
  <param name="car_description_3_drake_y"     type="double" value="5.0" />
  <param name="car_description_3_drake_z"     type="double" value="0.2" />
  <param name="car_description_3_drake_roll"  type="double" value="0.0" />
  <param name="car_description_3_drake_pitch" type="double" value="0.0" />
  <param name="car_description_3_drake_yaw"   type="double" value="0.0" />

  <param name="car_description_4_drake" textfile="$(find drake)/drake/examples/Cars/models/prius/prius_with_lidar.sdf"/>
  <param name="car_description_4_drake_x"     type="double" value="-5.0" />
  <param name="car_description_4_drake_y"     type="double" value="-5.0" />
  <param name="car_description_4_drake_z"     type="double" value="0.2" />
  <param name="car_description_4_drake_roll"  type="double" value="0.0" />
  <param name="car_description_4_drake_pitch" type="double" value="0.0" />
  <param name="car_description_4_drake_yaw"   type="double" value="0.0" />

  <param name="car_description_5_drake" textfile="$(find drake)/drake/examples/Cars/models/prius/prius_with_lidar.sdf"/>
  <param name="car_description_5_drake_x"     type="double" value="5.0" />
  <param name="car_description_5_drake_y"     type="double" value="-5.0" />
  <param name="car_description_5_drake_z"     type="double" value="0.2" />
  <param name="car_description_5_drake_roll"  type="double" value="0.0" />
  <param name="car_description_5_drake_pitch" type="double" value="0.0" />
  <param name="car_description_5_drake_yaw"   type="double" value="0.0" />

  <param name="world_description"
         command="$(find xacro)/xacro.py '$(find drake_cars_examples)/models/planar_world.xacro'" />
</launch>