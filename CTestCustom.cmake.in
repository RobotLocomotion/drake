list(APPEND CTEST_CUSTOM_COVERAGE_EXCLUDE
  ".*/test/.*"
  ".*/third_party/.*"
)

list(APPEND CTEST_CUSTOM_ERROR_EXCEPTION "^WARNING: ")

list(APPEND CTEST_CUSTOM_ERROR_MATCH
  "^ERROR: "
  "^FAIL: "
  "^TIMEOUT: "
)

