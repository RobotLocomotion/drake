<robot name="boxcar">
  <link name="box_shape">
    <!-- Inertia data is arbitrary. Its purpose here is to evade the
         joint-welding checks in RigidBodyTree.cpp. The resulting world-object
         joint should be a full 6DF floating joint.
    -->
    <inertial>
      <mass value="14.28" />
      <inertia iyy=".77843904" ixx=".49991220" izz=".49991220" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <geometry>
        <box size="2.0 1.0 1.0" />
      </geometry>
    </visual>
  </link>

</robot>
