
<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="chineseyoyo_twopulleys">

  <link name="base">
    <visual>
      <origin xyz="0 0 3"/>
      <geometry>
        <box size="9 1.7 6"/>
      </geometry>
    </visual>
  </link>
  
  <link name="tensioner_left">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.065833" ixy="0.000000" ixz="0.000000" iyy="0.125" iyz="0.000000" izz="0.065833" />
    </inertial>
    <visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".5" length=".2"/>
      </geometry>
    </visual>
    <visual> <!-- add a "line" for a visual reference -->
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz="-.22 .2 0" rpy="0 0 0"/>
      <geometry>
        <box size=".4 .2 .01"/>
      </geometry>
    </visual>
  </link>

  <link name="tensioner_right">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.065833" ixy="0.000000" ixz="0.000000" iyy="0.125" iyz="0.000000" izz="0.065833" />
    </inertial>
    <visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius=".5" length=".2"/>
      </geometry>
    </visual>
    <visual> <!-- add a "line" for a visual reference -->
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz=".22 .2 0" rpy="0 0 0"/>
      <geometry>
        <box size=".4 .2 .01"/>
      </geometry>
    </visual>
  </link>

  <link name="load">
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.506667" ixy="0.000000" ixz="0.000000" iyy="1.000000" iyz="0.000000" izz="0.506667" />
    </inertial>
    <visual>
      <material>
        <color rgba=".8 0 0 0"/>
      </material>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="1" length=".2"/>
      </geometry>
    </visual>

    <!-- add a "line" for a visual reference -->
<!--    <visual>
      <material>
        <color rgba="0 0 0 0"/>
      </material>
      <origin xyz="0 .2 0.45" rpy="0 0 0"/>
      <geometry>
        <box size=".01 .2 .9"/>
      </geometry>
    </visual> -->
  </link>
  
  <joint name="tensioner_angle_left" type="revolute">
    <origin xyz="-3 1 2.5"/>
    <axis xyz="0 1 0"/>
    <parent link="base"/>
    <child link="tensioner_left"/>
    <dynamics damping=".5"/>
  </joint>

  <joint name="tensioner_angle_right" type="revolute">
    <origin xyz="3 1 2.5"/>
    <axis xyz="0 1 0"/>
    <parent link="base"/>
    <child link="tensioner_right"/>
    <dynamics damping=".5"/>
  </joint>
  
  <link name="load_x" />
  <joint name="load_x" type="prismatic">
    <origin xyz="0 1 0"/>
    <axis xyz="1 0 0"/>
    <parent link="base"/>
    <child link="load_x"/>
    <dynamics damping="0"/>
  </joint>
  <joint name="load_z" type="prismatic">
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <parent link="load_x"/>
    <child link="load"/>
    <dynamics damping="0"/>
  </joint>

  <force_element name="tensioner_spring_left">
    <torsional_spring rest_angle="0" stiffness="80">
      <joint name="tensioner_angle_left"/>
    </torsional_spring>
  </force_element> 

  <force_element name="tensioner_spring_right">
    <torsional_spring rest_angle="0" stiffness="80">
      <joint name="tensioner_angle_right"/>
    </torsional_spring>
  </force_element>

 <transmission type="SimpleTransmission" name="tensioner_trans_left">
    <actuator name="tensioner_angle_left" />
    <joint name="tensioner_angle_left" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission> 

 <transmission type="SimpleTransmission" name="tensioner_trans_right">
    <actuator name="tensioner_angle_right" />
    <joint name="tensioner_angle_right" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  <cable min_length="14" max_length="14"> 
    <terminator link="tensioner_left" xyz="-.51 0 0" />
    <pulley link="base" xyz="-3 1 2.5" axis="0 1 0" radius=".5" number_of_wraps="1" />
    <pulley link="load" xyz="0 0 0" axis="0 -1 0" radius="1"/>
    <pulley link="base" xyz="3 1 2.5" axis="0 1 0" radius=".5" number_of_wraps="1" />
    <terminator link="tensioner_right" xyz=".51 0 0"/>
  </cable>

</robot>
