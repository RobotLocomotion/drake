<!--
    This prius model supports ackerman steering, which is controlled by
    an actuator.
    
    This model is front-wheel-drive. The front two wheels are independently controlled.

-->
<robot name="car">
  
  <!-- Wheels -->
  <link name="left_wheel">
    <inertial>
      <mass value="14.28" />
      <inertia iyy=".77843904" ixx=".49991220" izz=".49991220" />
    </inertial>
    <visual>
      <!--<origin xyz="0 0 0" rpy="1.5708 0 0" />-->
      <origin xyz="0 0 0.323342" rpy="1.5708 0 0" />
      <!-- <origin xyz="0 0 1.0" rpy="1.5708 0 0" /> -->
      <geometry>
        <cylinder length=".215" radius="0.323342"/>
      </geometry>
      <material name="">
        <color rgba=".2 .2 .2 1" />
      </material>
    </visual>  
    <collision>
      <origin xyz="0 0 0.323342" rpy="1.5708 0 0" />
      <geometry>
        <cylinder length=".215" radius="0.323342"/>
      </geometry>
    </collision>
    <!-- Wheel Markings -->
    <visual>
      <origin xyz="0 0.1075 0.323342" rpy="0 0 1.5708"/>
      <material>
        <color rgba=".9 .9 .9 1"/>
      </material>
      <geometry>
        <box size=".0025 .0025 .25"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0 0.1075 0.323342" rpy="0 1.5708 0"/>
      <material>
        <color rgba=".9 .9 .9 1"/>
      </material>
      <geometry>
        <box size=".0025 .0025 .25"/>
      </geometry>
    </visual>
  </link>
    
</robot>
