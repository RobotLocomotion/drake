    name = "uwebsockets",
    hdrs = glob(["src/*.h"]),
    includes = ["src"],
    deps = [
        "@usockets",
        "@zlib",
    ],
    linkopts = ["-pthread"],
    linkstatic = 1,
    deprecation = "The @uwebsockets external is deprecated in Drake's WORKSPACE and will be removed on or after 2023-11-01.",  # noqa
)
