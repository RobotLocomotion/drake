VTK_USE_SYSTEM_NETCDF:BOOL=ON
VTK_USE_SYSTEM_OGG:BOOL=ON
VTK_USE_SYSTEM_PNG:BOOL=ON
VTK_USE_SYSTEM_SQLITE:BOOL=ON
