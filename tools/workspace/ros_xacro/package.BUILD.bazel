    name = "xacro",
    main = "src/ros_xacro_main.py",
    srcs = ["src/ros_xacro_main.py"] + glob([
        "src/xacro/**",
    ], allow_empty = False),
    imports = ["src"],
    visibility = ["//visibility:public"],
)
