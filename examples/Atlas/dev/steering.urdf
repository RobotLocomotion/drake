<?xml version='1.0'?>
<gazebo version='1.2'>
  <model name="Gazebo Steering Wheel">
    <static>false</static>
      <link name='base_block'>

        <inertial>
      	<origin xyz="0 0 0.65"/>
          <mass value="100.0" />
          <inertia ixx="100.0" ixy="0" ixz="0" iyy="100.0" iyz="0" izz="100.0" />
        </inertial>

	<collision name='collision'>
      	<origin xyz="0 0 0.65"/>
	  <geometry>
	    <box size="0.25 0.125 1.3" />	
	  </geometry>
	</collision>
	
	<visual name='visual'>
      	<origin xyz="0 0 0.65"/>
	  <geometry>
	    <box size="0.25 0.125 1.3" />
	  </geometry>

          <material>
          <ambient>0.2 0.2 0.2 1</ambient>
     	    <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
          <emissive>0.5 0.5 0.5 1</emissive>
          </material>
	</visual>
      </link>

      <link name="steering_wheel">
	<inertial>
	  <mass value="1.0" />
	  <inertia ixx="0.1" iyy="1000" izz="1000" />
	</inertial>

	<collision name="collision">
	  <geometry>
	    <cylinder radius="0.22" length="0.025" />
	  </geometry>
	</collision>

	<visual name="visual">
	  <geometry>
	    <cylinder radius="0.22" length="0.02" />
	  </geometry>
	  
	  <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
          <emissive>0.5 0.5 0.5 1</emissive>
	  </material>
	</visual>

      </link>

  <joint type="revolute" name="base_to_steering">
    <origin xyz="-0.125 0 1.3208" rpy="0 1.57 0" />
    <child link="steering_wheel"/>
    <parent link="base_block" />
    <axis xyz="1 0 0" />
  </joint>

    </model>
</gazebo>


