
<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="SimplePulley">

  <link name="base">
    <visual>
      <material>
        <color rgba="1 .5 0 0"/>
      </material>
      <origin xyz="0 1 4" rpy="1.57 0 0"/>
      <geometry>
        <cylinder radius="1" length=".2"/>
      </geometry>
    </visual>
    <visual>
      <origin xyz="0 0 3"/>
      <geometry>
        <box size="3 1.7 6"/>
      </geometry>
    </visual>
  </link>
  
  <link name="mass1">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.0867" iyy=".1042" izz="0.0242"/>
    </inertial>
    <visual>
      <material>
        <color rgba=".8 0 0 0"/>
      </material>
      <geometry>
        <box size=".5 .2 1"/>
      </geometry>
    </visual>
  </link>

  <link name="mass2">
    <inertial>
      <mass value="2"/>
      <inertia ixx="0.1733" iyy="0.2083" izz="0.0483"/>
    </inertial>
    <visual>
      <material>
        <color rgba=".8 0 0 0"/>
      </material>
      <geometry>
        <box size=".5 .2 1"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="slider1" type="prismatic">
    <origin xyz="-1.25 .9 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base"/>
    <child link="mass1"/>
    <dynamics damping="2"/>
  </joint>
  
  <joint name="slider2" type="prismatic">
    <origin xyz="1.25 .9 0"/>
    <axis xyz="0 0 1"/>
    <parent link="base"/>
    <child link="mass2"/>
    <dynamics damping="2"/>
  </joint>

  <cable min_length="6" max_length="6">
    <terminator link="mass1"/>
    <pulley link="base" xyz="0 .9 4" axis="0 1 0" radius="1"/>
    <terminator link="mass2"/>
  </cable>

</robot>
