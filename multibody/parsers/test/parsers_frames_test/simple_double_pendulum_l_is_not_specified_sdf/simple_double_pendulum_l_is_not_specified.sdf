<sdf version="1.5">
  <!-- Comments in this file use frames as defined in the C++ Doxygen module
  "Frames and Bodies",
  http://drake.mit.edu/doxygen_cxx/group__multibody__frames__and__bodies.html.
  In particular, this file refers to the link frame L, the body frame B, the
  inertia frame I and the joint inboard frame F. -->
  <!-- TODO(liang.fok): The color specifications used for the links in this SDF
  are custom to the Gazebo simulator. Consider modifying Drake to support them.
  Maybe this can be done in conjunction with the switch to OSRF's SDF parser,
  see #4337. -->
  <model name="Simple_Double_Pendulum_L_Is_Not_Specified">
    <!-- Specifies X_WD, which is the model frame, D, expressed in the world
    frame, W. -->
    <pose frame="">0 0 0 0 0 0</pose>
    <link name="base">
      <!-- Specifies X_DL, which is the link frame, L, expressed in the model
      frame, D. -->
      <pose frame="">0 0 0 0 0 0</pose>
      <inertial>
        <!-- Specifies X_IL, the inertial frame, I, expressed in the link frame,
        L. -->
        <pose frame="">0 0 0 0 0 0</pose>
        <mass>1.0</mass>
        <inertia>
          <ixx>0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0</izz>
        </inertia>
      </inertial>
      <visual name="base_visual">
        <pose frame="">0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>1 0.2 1</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Red</name>
          </script>
        </material>
      </visual>
    </link>
    <link name="upper_arm">
      <!-- This specifies X_DL.
           Explicitly make it to be at Bo.-->
      <pose frame="">0 0 0 0 0 0</pose>
      <inertial>
        <!-- This specifies X_LI. -->
        <pose frame="">0 -0.5 0 0 0 0</pose>
        <mass>1</mass>
        <inertia>
          <ixx>0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0</izz>
        </inertia>
      </inertial>
      <visual name="upper_arm_visual">
        <pose frame="">0 -0.5 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <length>1</length>
            <radius>0.1</radius>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Green</name>
          </script>
        </material>
      </visual>
    </link>
    <link name="lower_arm">
      <!-- This specifies X_DL. When L is not specified, the parsers makes L = F
       when parsing the joint. The parser will then expect F to be expressed in
       the model frame D-->
      <!-- <pose>0 0 0 0 0 0</pose>-->
      <inertial>
        <!-- This specifies X_LI. -->
        <pose frame="">0 -0.5 0 0 0 0</pose>
        <mass>1</mass>
        <inertia>
          <ixx>0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0</iyy>
          <iyz>0</iyz>
          <izz>0</izz>
        </inertia>
      </inertial>
      <visual name="lower_arm_visual">
        <!-- This specifies X_LV. -->
        <pose frame="">0 -0.5 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <length>1</length>
            <radius>0.1</radius>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Blue</name>
          </script>
        </material>
      </visual>
    </link>
    <joint name="joint1" type="revolute">
      <parent>base</parent>
      <child>upper_arm</child>
      <axis>
        <xyz>0 0 1</xyz>
        <!-- The default is the axis expressed in the inboard frame F. -->
        <use_parent_model_frame>1</use_parent_model_frame>
      </axis>
    </joint>
    <joint name="joint2" type="revolute">
      <parent>upper_arm</parent>
      <child>lower_arm</child>
      <!-- Pose of the joint outboard frame M -->
      <!-- When its outboard link frame L was defined by the
           corresponding <link>, M is expressed in L, i.e. <pose> specifies
           X_LM.
           When its outboard frame link L was NOT specified, M is expressed
           in the model frame D, i.e. <pose> specifies X_DM. -->
      <!-- In this case the outboard link frame L was not specified and
      therefore <pose> is giving X_DM -->
      <pose>0 -1.0 0 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <!-- The default is the axis expressed in the joint inboard frame F. -->
        <use_parent_model_frame>1</use_parent_model_frame>
      </axis>
    </joint>
  </model>
</sdf>
