    ],
    test_timeout = "moderate",
    deps = [
        "//common:add_text_logging_gflags",
        "//common/symbolic:monomial_util",
        "//common/symbolic:polynomial",
        "//tools/performance:fixture_common",
        "//tools/performance:gflags_main",
        "@fmt",
    ],
