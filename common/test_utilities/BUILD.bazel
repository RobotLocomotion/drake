    testonly = 1,
    visibility = ["//visibility:public"],
    deps = [
        ":diagnostic_policy_test_base",
        ":eigen_matrix_compare",
        ":expect_no_throw",
        ":expect_throws_message",
        ":is_dynamic_castable",
        ":is_memcpy_movable",
