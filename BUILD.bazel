        "@ipopt//:install",
        "@lcm//:install",
        "@nlopt//:install",
        "@octomap//:install",
        "@pybind11//:install",
        "@robotlocomotion_lcmtypes//:install",
        "@sdformat//:install",
        "@spdlog//:install",
        "@tinyobjloader//:install",
